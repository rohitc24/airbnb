<% layout("layoutss/boilerplate") %>
<body>
    <form action="/listings/add" method="post"  novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row col-9 offset-2">
        <div class="mt-1 ">
            <label for="title" class="form-label">Title:</label>
            <input type="text" name="list[title]" placeholder="Title" class="form-control" id="title" required>
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Title is Required</div>
        </div>
        <div class="mt-3">
            <label for="description" class="form-label">Description:</label>
            <textarea name="list[description]" placeholder="Description" cols="30" rows="10" class="form-control" id="description" required></textarea>
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Description is Required</div>
        </div>
        <div class="col-5 mt-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" id="image" class="form-control" name="list[image]" required>
            <div class="invalid-feedback">Price is Required</div>
        </div>
        <div class="col-4 mt-4">
            <label for="cat">Category</label>
            <select name="list[category]" id="cat" class="form-select" aria-label="Default select example">
                <option value="mountain" selected>Mounatain</option>
                <option value="lakes">Lake</option>
                <option value="farms">Farm</option>
                <option value="castles">Castle</option>
                <option value="arctic">Arcitc</option>
                <option value="beach">Beach</option>


            </select>
        </div>
        <div class="row">
            
        <div class="mt-3 col-2">
            <label for="price" class="form-label">Price:</label>
            <input type="number" name="list[price]" placeholder="Enter price" class="form-control" id="price" required>
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Price is Required</div>
        </div>
       <div class="mt-3 col-4">
        <label for="location"class="form-label">Location:</label>
        <input type="text" name="list[location]" placeholder="enter loction" class="form-control" id="location" required>
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Location is Required</div>
       </div>
       <div class="mt-3 col-3">
        <label for="country" class="form-label">Country:</label>
        <input type="text" name="list[country]" placeholder="enter country" class="form-control" id="country" required>
        <div class="valid-feedback">Looks Good</div>
        <div class="invalid-feedback">Country is Required</div>
       </div>
    </div>
    </div>
        <button class="btn mt-4 offset-2 mb-5">Add</button>
    </form>
</body>