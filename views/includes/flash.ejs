<% if (success && success.length) { %>
    <div class=" flash alert alert-success alert-dismissible fade show col-5 offset-3">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="flash alert alert-danger alert-dismissible fade show col-5 offset-3">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

 